{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "baseUrl": "./src",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.ts"
  ]
}
